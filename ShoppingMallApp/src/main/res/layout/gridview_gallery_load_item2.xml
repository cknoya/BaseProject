<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_gallery_image"
        android:layout_width="@dimen/dp_86"
        android:layout_height="@dimen/dp_86"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_red_delete" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_below="@+id/tv_notification"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:progressDrawable="@drawable/horizontal_progressbar_background"
        android:gravity="center"
        android:indeterminate="false" />

    <ImageView
        android:id="@+id/iv_retry"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_refresh"
        android:layout_toLeftOf="@id/tv_notification"
        android:layout_alignTop="@id/tv_notification"
        android:layout_alignBottom="@id/tv_notification"
        android:paddingTop="10dp"
        android:paddingBottom="4dp"
        android:gravity="center_vertical"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_notification"
        android:text="上传中"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_gallery_image"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="4dp"
        android:textColor="@color/color_white"
        android:layout_marginTop="@dimen/dp_16"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>